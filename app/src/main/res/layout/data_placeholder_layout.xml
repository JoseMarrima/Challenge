<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <View
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-1dp"
        android:background="@color/background" />

    <View
        android:id="@+id/profile_image_place_holder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/pic"
        android:layout_alignStart="@+id/pic"
        android:layout_marginTop="8dp"
        android:background="@color/background" />

    <View
        android:id="@+id/name_place_holder"
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:layout_below="@+id/pic"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/profile_image_place_holder"
        android:background="@color/background" />

    <View
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_below="@id/name_place_holder"

        android:layout_alignStart="@+id/name_place_holder"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/background" />
    <View
        android:id="@+id/likes_image_place_holder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/pic"
        android:layout_alignEnd="@+id/pic"
        android:layout_marginTop="8dp"
        android:background="@color/background" />

</RelativeLayout>